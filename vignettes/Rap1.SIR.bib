	author = {Grunstein, Michael},
	month = jun,
	year = {1997},
	pages = {383--387},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\mqbssdgb\\Zotero\\storage\\8Z2LJQD9\\Grunstein - 1997 - Molecular model for telomeric heterochromatin in y.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\mqbssdgb\\Zotero\\storage\\9QBJGSBH\\S0955067497800117.html:text/html},
